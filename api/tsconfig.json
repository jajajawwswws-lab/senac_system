{
  "compilerOptions": {
    // üìÅ File Layout - ESSENCIAL para seu projeto
    "rootDir": "./",
    "outDir": "./",
    
    // üåç Environment Settings - Para Node.js na Vercel
    "module": "commonjs",           // Mudamos de "nodenext" para "commonjs" (melhor para Vercel)
    "target": "es2020",              // Um pouco mais est√°vel que "esnext"
    "lib": ["es2020"],               // Adicionamos bibliotecas ES2020
    "types": ["node"],               // IMPORTANTE: Adicionamos types do node
    
    // üì¶ Other Outputs - √öteis para debug
    "sourceMap": true,               
    "declaration": true,             // Gera arquivos .d.ts (tipos)
    "declarationMap": true,           // Mapa para os arquivos .d.ts
    
    // üîí Stricter Typechecking - Mant√©m seu c√≥digo seguro
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,        // Descomentamos - √∫til
    "noImplicitOverride": true,        // Descomentamos - √∫til
    "noUnusedLocals": true,            // Descomentamos - alerta sobre vari√°veis n√£o usadas
    "noUnusedParameters": true,        // Descomentamos - alerta sobre par√¢metros n√£o usados
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    
    // ‚öôÔ∏è Recommended Options - Ajustados
    "jsx": "react-jsx",                // Mant√©m, mesmo sem React (n√£o atrapalha)
    "verbatimModuleSyntax": false,      // Mudamos para false (melhor com commonjs)
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // ‚ûï Extra options √∫teis
    "resolveJsonModule": true,          // Permite importar arquivos JSON
    "esModuleInterop": true,             // Melhor compatibilidade com m√≥dulos CommonJS
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}